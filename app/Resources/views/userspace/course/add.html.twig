{% extends 'base.html.twig' %}

{% block body %}
<h1 class="text-center">Ajout d'une formation</h1>
{{form_start(form,{'attr':{'class':'form-horizontale'}})}}
{{form_errors(form)}}
  <div>
    <div class="form-group">
        {% set label %}Titre de la formation{% endset %}
        {{ form_label(form.name, label, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.name) }}
        <div class="col-sm-4">
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {% set label %}L'année/Les années{% endset %}
        {{ form_label(form.date, label, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.date) }}
        <div class="col-sm-4">
            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {% set label %}Descriptif{% endset %}
        {{ form_label(form.description, label, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.description) }}
        <div class="col-sm-4">
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {% set label %}Diplôme{% endset %}
        {{ form_label(form.diploma, label, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.diploma) }}
        <div class="col-sm-4">
            {{ form_widget(form.diploma, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {% set label %}Lieu{% endset %}
        {{ form_label(form.location, label, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.location) }}
        <div class="col-sm-4">
            {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>



           <div class="button">
               <button type="submit">Ajout d'une formation</button>
           </div>

       {{ form_rest(form) }}
    {{ form_end(form) }}
   </div>
{% endblock %}
