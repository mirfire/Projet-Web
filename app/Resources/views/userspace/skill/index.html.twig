{% extends 'base.html.twig' %}

{% block body %}
  <section class="container">
    <h2 class="text-center">Compétences</h2>
    <a href="{{ path('user_skill_add') }}">Ajouter une Compétence</a>
    {% if user.skill.count == 0 %}
      <div class="alert alert-danger" role="alert">
        <strong>Mince !</strong> Aucune compétence n'a pu être trouvée.
      </div>
    {% else %}
      <table class="table">
        <thead>
        <tr>
          <th>Nom</th>
          <th>Niveau</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for skill in user.skill %}
        <tr>
          <td>{{ skill.name }}</td>
          <td>{{ skill.level }}</td>
          <td><a href="{{ path('user_skill_delete', {'id':skill.id}) }}"><i class="fa fa-3x fa-times"></i></a> <a href="{{ path('user_skill_edit', {'id':skill.id}) }}"><i class="fa fa-3x fa-edit"></i></a></td>
        </tr>
        {% endfor %}
        </tbody>
      </table>
    {% endif %}
    <hr>
    <h2 class="text-center">Groupes de Compétences</h2>
    <a href="{{ path('user_skill_category_add') }}">Ajouter une Catégorie de Compétence</a>
    <form action="{{ path('user_skill_add') }}"></form>
    {% if user.skillcategory.count == 0 %}
      <div class="alert alert-danger" role="alert">
        <strong>Mince !</strong> Aucun groupe de compétences n'a pu être trouvé.
      </div>
    {% else %}
      <table class="table">
        <thead>
        <tr>
          <th>Nom</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for skill in user.skillcategory %}
          <tr>
            <td>{{ skill.name }}</td>
            <td><a href="{{ path('user_skill_category_delete', {'id':skill.id}) }}"><i class="fa fa-3x fa-times"></i></a> <a href="{{ path('user_skill_category_edit', {'id':skill.id}) }}"><i class="fa fa-3x fa-edit"></i></a></td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    {% endif %}
  </section>
{% endblock %}